.input_block {
  display: flex;
}
.input_num {
  border: 2rpx #a7a7a7 solid;
  width: 70rpx;
  height: 60rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
