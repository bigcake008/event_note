<scroll-view class="scroll_view"
             type="custom"
             scroll-y
>
  <view class="root" data-id="9998">
    <view class="logo">
      <view class="background"></view>
      <image 
            class="foreground" 
            src="../../public/symbols/event_note.svg"
      ></image>
    </view>
    <view class="house_list {{focus}}">
      <house 
            wx:for="{{house}}"
            wx:key="index" 
            index="{{item.index}}" 
            location="{{item.location}}"
            tappedButton="{{tappedButton}}" 
            data-index="{{item.index}}"
            data-location="{{item.location}}"
            bind:tap="handleHouseTap"
      ></house>
    </view>
    <view class="btn_group"
          bind:add_house="handleAddHouse"
          bind:search_info="handleSearchInfo"
          bind:edit_house="handleEditHouse"
          bind:remove_house="handleRemoveHouse"
    >
      <custom-button 
            wx:for="{{btn}}" 
            wx:key="index" 
            btn-name="{{item}}" 
            tapped-btn="{{tappedButton}}" 
            bind:tap="handleFocus"
      ></custom-button>
    </view>
   <view wx:if="{{tappedButton != ''}}"
         class="input_group focus" 
    >
      <custom-input tapped-btn="{{tappedButton}}" />
    </view>
    <view class="glass_view {{tappedButton == '' ? 'hide' : ''}}"
          bind:tap="handleUnfocus" 
    ></view>
  </view>
</scroll-view>