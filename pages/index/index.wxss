/* logo section */
.root {
  margin-top: 100rpx;
}

.logo {
  margin: 20rpx;
  display: flex;
  justify-content: space-around;
}
.foreground {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
}
.background {
  box-sizing: border-box;
  padding: 40rpx 40rpx 0;
  padding-bottom: 100rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: bisque;
  background-clip: content-box;
}
/*  */

.btn_group {
  margin: 20rpx 0 0 46rpx;
  display: flex;
}

.input_view {
  position: absolute;
  top: 0;
  width: 100%;
  backdrop-filter: blur(3px);
}

.input_group {
  position: relative;
  margin-left: 60rpx;
}

.focus {
  position: relative;
  z-index: 1;
}
