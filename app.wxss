/**app.wxss**/
page {
  height: 100vh;
}

.scroll_view {
  height: 100%;
}

.root {
  margin-top: 100rpx;
  padding-bottom: 50rpx;
  min-height: 100vh;
  /* height: 100%; */
}

.glass_view {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(3px);
}

.focus {
  position: relative;
  z-index: 1;
}

.hide {
  display: none;
}